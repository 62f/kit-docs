/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
    font-family: Overpass, ui-sans-serif, system-ui, -apple-system,
        BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial,
        'Noto Sans', sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji',
        'Segoe UI Symbol', 'Noto Color Emoji';
    @apply font-light text-gray-800 bg-gray-50 text-lg;
}
.prose a {
    @apply hover:text-primary transition-colors;
}
.prose h1,
.prose h2,
.prose h3,
.prose h4,
.prose h5,
.prose h6 {
    @apply align-middle flex relative;
}
.prose h1 a {
    @apply hidden;
}
.prose h2 a,
.prose h3 a,
.prose h4 a,
.prose h5 a,
.prose h6 a {
    @apply hidden md:inline-block;
    @apply h-6 w-6 self-center align-middle -ml-7 mr-1;
    @apply text-gray-400 transition-colors;
}
.language-diff .token.inserted {
    color: #7ec699;
}
